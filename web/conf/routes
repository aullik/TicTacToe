# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                              controllers.Application.signUpPage
GET         /index                         controllers.Application.index
#GET        /tictactoe                controllers.Application.tictactoe

POST        /signup                        controllers.Application.signUp
POST        /login                         controllers.Application.login

POST        /users                         controllers.Application.getUsers()

#POST        /selectFramework/:framework        controllers.Application.selectFramework(framework)

GET         /logout                        controllers.Application.logout

POST        /startGame/:otherPlayer        controllers.Application.startGame(otherPlayer)
GET         /tictactoe                     controllers.Application.game

POST        /move/:data                    controllers.Application.move(data)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                  controllers.Assets.at(path="/public", file)
#GET         /polymer/*file                 controllers.Assets.at(path="/app/polymer/views/src", file)
# Get Polymer recources
GET         /polymer/*element              controllers.Application.polymer(element)

# Socket
GET         /socket/:player                controllers.WebSocketsControl.socket(player: String)