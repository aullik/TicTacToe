# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                    controllers.Application.signupPage
GET         /index                               controllers.Application.index
#GET        /tictactoe                controllers.Application.tictactoe

POST        /signup                              controllers.Application.signup
POST        /login                               controllers.Application.login

GET         /startGame/:player1/:player2/        controllers.Application.startGame(player1, player2)
GET         /tictactoe/                          controllers.Application.game



# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                        controllers.Assets.at(path="/public", file)

    